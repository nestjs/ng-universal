{
  "name": "@nestjs/ng-universal",
  "version": "1.0.2",
  "description": "Nest - modern, fast, powerful node.js web framework (@ng-universal)",
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:lib && npm run build:schematics",
    "build:lib": "tsc -p tsconfig.json",
    "build:schematics": "tsc -p tsconfig.schematics.json",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next"
  },
  "peerDependencies": {
    "@angular/platform-server": "^7.2.9",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nguniversal/common": "^7.1.1",
    "@nguniversal/express-engine": "^7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.1",
    "express": "^4.16.4",
    "zone.js": "^0.8.29 || ^0.9.0"
  },
  "devDependencies": {
    "@angular/platform-server": "7.2.13",
    "@nestjs/common": "6.1.1",
    "@nestjs/core": "6.1.1",
    "@nguniversal/common": "7.1.1",
    "@nguniversal/express-engine": "7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "7.1.1",
    "@types/memory-cache": "0.2.0",
    "@types/node": "11.13.6",
    "express": "4.16.4",
    "husky": "2.1.0",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "ts-morph": "1.3.3",
    "typescript": "3.4.4",
    "zone.js": "0.8.29"
  },
  "dependencies": {
    "@angular-devkit/schematics": "7.3.7",
    "@schematics/angular": "7.3.7",
    "concurrently": "4.1.0",
    "cross-spawn": "6.0.5",
    "livereload": "0.7.0",
    "memory-cache": "0.2.0",
    "webpack-node-externals": "1.7.2"
  },
  "schematics": "./schematics/collection.json",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
