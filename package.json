{
  "name": "@nestjs/ng-universal",
  "version": "6.0.0",
  "description": "Nest - modern, fast, powerful node.js web framework (@ng-universal)",
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "scripts": {
    "test:schematics": "jest --run-in-band --silent",
    "build": "npm run build:lib && npm run build:schematics",
    "build:lib": "tsc -p tsconfig.json",
    "build:schematics": "tsc -p tsconfig.schematics.json",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next"
  },
  "peerDependencies": {
    "@angular/common": "^12.0.0 || ^13.0.0",
    "@angular/platform-server": "^12.0.0 || ^13.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nguniversal/common": "^12.0.0 || ^13.0.0",
    "@nguniversal/express-engine": "^12.0.0 || ^13.0.0",
    "express": "^4.17.1",
    "zone.js": "^0.11.0"
  },
  "devDependencies": {
    "@angular/common": "13.0.2",
    "@angular/platform-server": "13.0.2",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-angular": "15.0.0",
    "@nestjs/common": "8.2.3",
    "@nestjs/core": "8.2.3",
    "@types/jest": "27.0.3",
    "@types/memory-cache": "0.2.1",
    "@types/node": "16.11.9",
    "express": "4.17.1",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "12.1.2",
    "prettier": "2.4.1",
    "ts-jest": "27.0.7",
    "ts-morph": "13.0.2",
    "typescript": "4.5.2",
    "zone.js": "0.11.4"
  },
  "dependencies": {
    "@angular-devkit/schematics": "13.0.2",
    "@schematics/angular": "13.0.2",
    "@nguniversal/common": "13.0.1",
    "@nguniversal/express-engine": "13.0.1",
    "memory-cache": "0.2.0"
  },
  "schematics": "./schematics/collection.json",
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  }
}
